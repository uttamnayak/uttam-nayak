    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Font Size",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "default": 42
    },
    {
      "type": "textarea",
      "id": "section_description",
