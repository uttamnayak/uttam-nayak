    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "block_image",
          "label": "Block Image"
        },
        {
          "type": "text",
          "id": "block_heading",
          "label": "Block Heading",
          "default": "Feature Title"
        },
        {
          "type": "color",
          "id": "block_heading_color",
          "label": "Block Heading Color",
          "default": "#333333"
        },
        {
          "type": "range",
          "id": "block_heading_size",
          "label": "Block Heading Font Size",
          "min": 14,
          "max": 32,
          "step": 1,
          "unit": "px",
          "default": 18
        },
        {
          "type": "textarea",
          "id": "block_text",
          "label": "Block Text",
          "default": "Feature description goes here."
        },
        {
          "type": "color",
          "id": "block_text_color",
          "label": "Block Text Color",
          "default": "#666666"
        },
        {
          "type": "range",
          "id": "block_text_size",
          "label": "Block Text Font Size",
          "min": 12,
          "max": 20,
          "step": 1,
          "unit": "px",
          "default": 14
        },
        {
          "type": "header",
          "content": "Block Styling"
        },
        {
          "type": "color",
          "id": "block_background_color",
          "label": "Block Background Color",
          "default": "#f8f9fa"
        },
        {
          "type": "color",
          "id": "block_border_color",
          "label": "Block Border Color",
          "default": "#e9ecef"
        },
        {
          "type": "range",
          "id": "block_border_width",
          "label": "Block Border Width",
          "min": 0,
          "max": 5,
          "step": 1,
          "unit": "px",
          "default": 1
        },
        {
          "type": "header",
          "content": "Block Shadow Settings"
        },
        {
          "type": "range",
          "id": "block_shadow_x",
          "label": "Shadow X Offset",
          "min": -20,
          "max": 20,
          "step": 1,
          "unit": "px",
          "default": 0
        },
        {
          "type": "range",
          "id": "block_shadow_y",
          "label": "Shadow Y Offset",
          "min": -20,
          "max": 20,
          "step": 1,
          "unit": "px",
          "default": 4
        },
        {
