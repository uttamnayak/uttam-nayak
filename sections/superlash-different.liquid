{{ 'section-superlash-different.css' | asset_url | stylesheet_tag }}

<section class="superlash-different-section" 
         style="{% if section.settings.section_bg_image %}background-image: url('{{ section.settings.section_bg_image | img_url: 'master' }}');{% endif %}
                background-color: {{ section.settings.section_bg_color }};
                background-size: cover;
                background-position: center;
                background-repeat: no-repeat;">
  <div class="container">
    <div class="superlash-wrapper">
      {% if section.settings.section_heading != blank or section.settings.section_description != blank %}
        <div class="section-header">
          {% if section.settings.section_heading != blank %}
            <h2 class="section-title" 
                style="color: {{ section.settings.section_heading_color }}; 
                       font-size: {{ section.settings.section_heading_size }}px;">
              {{ section.settings.section_heading }}
            </h2>
          {% endif %}
          {% if section.settings.section_description != blank %}
            <p class="section-description"
               style="color: {{ section.settings.section_description_color }}; 
                      font-size: {{ section.settings.section_description_size }}px;">
              {{ section.settings.section_description }}
            </p>
          {% endif %}
        </div>
      {% endif %}

      <div class="superlash-content">
        <div class="content-column" 
             style="{% if section.settings.column_bg_image %}background-image: url('{{ section.settings.column_bg_image | img_url: 'master' }}');{% endif %}
                    background-color: {{ section.settings.column_bg_color }};
                    background-size: cover;
                    background-position: center;
                    background-repeat: no-repeat;">
          
          {% if section.settings.column_heading != blank %}
            <h3 class="column-title"
                style="color: {{ section.settings.column_heading_color }}; 
                       font-size: {{ section.settings.column_heading_size }}px;">
              {{ section.settings.column_heading }}
            </h3>
          {% endif %}

          {% if section.settings.column_description != blank %}
            <p class="column-description"
               style="color: {{ section.settings.column_description_color }}; 
                      font-size: {{ section.settings.column_description_size }}px;">
              {{ section.settings.column_description }}
            </p>
          {% endif %}

          {% if section.blocks.size > 0 %}
            <div class="features-list">
              {% for block in section.blocks %}
                <div class="feature-item" {{ block.shopify_attributes }}>
                  {% if block.settings.feature_heading != blank %}
                    <h4 class="feature-title"
                        style="color: {{ block.settings.feature_heading_color }}; 
                               font-size: {{ block.settings.feature_heading_size }}px;">
                      {{ block.settings.feature_heading }}
                    </h4>
                  {% endif %}
                  {% if block.settings.feature_text != blank %}
                    <p class="feature-text"
                       style="color: {{ block.settings.feature_text_color }}; 
                              font-size: {{ block.settings.feature_text_size }}px;">
                      {{ block.settings.feature_text }}
                    </p>
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          {% endif %}

          {% if section.settings.button_text != blank and section.settings.button_url != blank %}
            <div class="button-wrapper">
              <a href="{{ section.settings.button_url }}" class="superlash-btn">
                {{ section.settings.button_text }}
              </a>
            </div>
          {% endif %}
        </div>

        <div class="image-column">
          {% if section.settings.column_image != blank %}
            <div class="column-image">
              <img src="{{ section.settings.column_image | img_url: 'master' }}" 
                   alt="{{ section.settings.column_image.alt | default: section.settings.column_heading }}"
                   loading="lazy">
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.superlash-different-section {
  padding: 60px 0;
  position: relative;
}

.superlash-different-section .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.superlash-wrapper {
  width: 100%;
}

.section-header {
  text-align: center;
  margin-bottom: 50px;
}

.section-title {
  margin: 0 0 20px 0;
  font-weight: 600;
  line-height: 1.2;
}

.section-description {
  margin: 0;
  line-height: 1.6;
  max-width: 800px;
  margin: 0 auto;
}

.superlash-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
  align-items: center;
}

.content-column {
  padding: 40px;
  border-radius: 8px;
  position: relative;
}

.column-title {
  margin: 0 0 20px 0;
  font-weight: 600;
  line-height: 1.3;
}

.column-description {
  margin: 0 0 30px 0;
  line-height: 1.6;
}

.features-list {
  margin-bottom: 30px;
}

.feature-item {
  margin-bottom: 25px;
}

.feature-item:last-child {
  margin-bottom: 0;
}

.feature-title {
  margin: 0 0 8px 0;
  font-weight: 600;
  line-height: 1.3;
}

.feature-text {
  margin: 0;
  line-height: 1.5;
}

.button-wrapper {
  margin-top: 30px;
}

.superlash-btn {
  display: inline-block;
  padding: 12px 30px;
  background-color: #f4c2c2;
  color: #333;
  text-decoration: none;
  border-radius: 4px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.superlash-btn:hover {
  background-color: #f0a8a8;
  transform: translateY(-2px);
}

.image-column {
  position: relative;
}

.column-image {
  width: 100%;
  height: 100%;
  min-height: 400px;
  border-radius: 8px;
  overflow: hidden;
}

.column-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* Tablet Styles */
@media (max-width: 768px) {
  .superlash-different-section {
    padding: 40px 0;
  }
  
  .superlash-content {
    gap: 30px;
  }
  
  .content-column {
    padding: 30px;
  }
  
  .section-header {
    margin-bottom: 40px;
  }
}

/* Mobile Styles */
@media (max-width: 480px) {
  .superlash-different-section {
    padding: 30px 0;
  }
  
  .superlash-content {
    grid-template-columns: 1fr;
    gap: 30px;
  }
  
  .content-column {
    padding: 25px;
    order: 2;
  }
  
  .image-column {
    order: 1;
  }
  
  .column-image {
    min-height: 300px;
  }
  
  .section-header {
    margin-bottom: 30px;
  }
  
  .container {
    padding: 0 15px;
  }
}
</style>

